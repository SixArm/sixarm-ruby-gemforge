#!/bin/bash

##
# Proof the *.gemspec file.
##

set -euf
DIR=$(dirname $0)
. $DIR/gemforge

_gem_name=$(gem_name)

file="$_gem_name.gemspec"

file_line_num_must_eq "$file" 1 "# -*- coding: utf-8 -*-"
file_line_num_must_eq "$file" 2 ""
file_line_num_must_eq "$file" 3 "Gem::Specification.new do |s|"

for s in \
  "^  s.name           = \"sixarm_ruby_.*\"" \
  "^  s.summary        = \"SixArm.com → Ruby → .*\"" \
  "^  s.description    = \".*\"" \
  "^  s.version        = \".*\"" \
  "^  s.author         = \"SixArm\"" \
  "^  s.email          = \"sixarm@sixarm.com\"" \
  "^  s.homepage       = \"http://sixarm.com/\"" \
  "^  s.licenses       = \[.*\]" \
  "^  s.signing_key    = \".*/sixarm-rsa-4096-x509-20180113-private.pem\"" \
  "^  s.cert_chain     = \[\".*/sixarm-rsa-4096-x509-20180113-public.pem\"\]" \
  "^  s.platform       = Gem::Platform::RUBY" \
  "^  s.require_path   = \"lib\"" \
  "^  s.files = \[" \
  "^    \"Rakefile\"," \
  "^  s.test_files = \["
do
  file_text_must_match "$file" "$s"
done

for s in \
  "^    \".gemtest\"," \
  "^    \".rspec\"," \
  "^    \".travis.yml\"," \
  "^    \"CHANGES.md\"," \
  "^    \"CONTRIBUTING.md\"," \
  "^    \"LICENSE.md\"," \
  "^    \"README.md\"," \
  "^    \"VERSION\"," \
  " s.has_rdoc"
do
  file_text_must_not_match "$file" "$s"
done
