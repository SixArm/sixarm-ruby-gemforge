#!/bin/sh
set -o errexit
DIR=$(dirname $0)
. $DIR/gemforge

"$sed" -i '
s/s.add_development_dependency(.minitest.,.*/s.add_development_dependency("minitest", ">= 5.11.1", "< 6")/;
s/s.add_development_dependency(.sixarm_ruby_minitest_extensions.,.*/s.add_development_dependency("sixarm_ruby_minitest_extensions", ">= 1.0.8", "< 2")/;
s/s.add_development_dependency(.rake.,.*/s.add_development_dependency("rake", ">= 12.3.0", "< 13")/;
s/s.add_development_dependency(.simplecov.,.*/s.add_development_dependency("simplecov", ">= 0.14.1", "< 2")/;
s/s.add_development_dependency(.coveralls.,.*/s.add_development_dependency("coveralls", ">= 0.8.21", "< 2")/;
s/s.add_development_dependency(.flay.,.*/s.add_development_dependency("flay", ">= 2.10.0", "< 3")/;
s/s.add_development_dependency(.flog.,.*/s.add_development_dependency("flog", ">= 4.6.1", "< 5")/;
s/s.add_development_dependency(.metric_fu.,.*/s.add_development_dependency("metric_fu", ">= 4.12.0", "< 5")/;
s/s.add_development_dependency(.reek.,.*/s.add_development_dependency("reek", ">= 4.7.3", "< 5")/;
s/s.add_development_dependency(.roodi.,.*/s.add_development_dependency("roodi", ">= 5.0.0", "< 6")/;
s/s.add_development_dependency(.sandi_meter.,.*/s.add_development_dependency("sandi_meter", ">= 1.2.0", "< 2")/;
s/s.add_development_dependency(.rubocop.,.*/s.add_development_dependency("rubocop", ">= 0.52.1", "< 1")/;
s/s.add_development_dependency(.rubycritic.,.*/s.add_development_dependency("rubycritic", ">= 3.3.0", "< 4")/;
' *.gemspec
