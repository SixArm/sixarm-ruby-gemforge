#!/bin/sh
set -o errexit
DIR=$(dirname $0)
. $DIR/gemforge

_gem_name=$(gem_name)
_gem_name_version=$(gem_name_version)
_gem_version=$(gem_version)
_team=$(team)
_repo=$(repo)

file=README.md

file_section_refresh(){
	file="$1"; key="$2"; text="$3"
	sed -i "/<!--$key-open-->/,/<!--$key-shut-->/c\<!--$key-open-->$text<!--$key-shut-->" "$file"
}

###
#
# Header section
#
###

badge0=$(badge_markdown "$(fury_label)" "$(fury_icon_uri)" "$(fury_link_uri)")
badge1=$(badge_markdown "$(travis_label)" "$(travis_icon_uri)" "$(travis_link_uri)")
badge2=$(badge_markdown "$(codeclimate_label)" "$(codeclimate_icon_uri)" "$(codeclimate_link_uri)")

link0="* Git: <https://github.com/$_team/$_repo>\n"
link1="* Doc: <http://sixarm.com/$_gem_name/doc>\n"
link2="* Gem: <https://rubygems.org/gems/$_gem_name>\n"
link3="* Contact: Joel Parker Henderson, <joel@sixarm.com>\n"
link4="* Project: [changes](CHANGES.md), [license](LICENSE.md), [contributing](CONTRIBUTING.md).\n"

file_section_refresh "$file" "header" "\n\n$badge0$badge1$badge2\n$link0$link1$link2$link3$link4\n"

###
#
# Install section
#
###

top0="## Install\n\n"

gem0="### Gem\n\n"
gem1="To install this gem in your shell or terminal:\n\n"
gem2="    gem install $_gem_name\n\n"

gemfile0="### Gemfile\n\n"
gemfile1="To add this gem to your Gemfile:\n\n"
gemfile2="    gem '$_gem_name'\n\n"

req0="### Require\n\n"
req1="To require the gem in your code:\n\n"
req2="    require '$_gem_name'\n\n"

file_section_refresh "$file" "install" "\n\n$top0$gem0$gem1$gem2$gemfile0$gemfile1$gemfile2$req0$req1$req2"
