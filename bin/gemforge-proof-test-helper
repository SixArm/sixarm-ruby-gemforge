#!/bin/bash
set -euf
DIR=$(dirname $0)
. $DIR/gemforge-proof

file="test/${gem_name}_test.rb"

file_line_num_must_eq "$file" 1 "# -*- coding: utf-8 -*-"
file_line_num_must_eq "$file" 2 "require \"minitest/autorun\""
file_line_num_must_eq "$file" 3 "require \"coveralls\""
file_line_num_must_eq "$file" 4 "require \"simplecov\""
file_line_num_must_eq "$file" 5 "Coveralls.wear!"
file_line_num_must_eq "$file" 6 "SimpleCov.formatter = SimpleCov::Formatter::MultiFormatter.new(["
file_line_num_must_eq "$file" 7 "  SimpleCov::Formatter::HTMLFormatter,"
file_line_num_must_eq "$file" 8 "  Coveralls::SimpleCov::Formatter"
file_line_num_must_eq "$file" 9 "])."
file_line_num_must_eq "$file" 10 "SimpleCov.start"
