#!/bin/bash
set -euf
DIR=$(dirname $0)
. $DIR/gemforge

file="Rakefile"

grep -q "t.libs.push(\"lib\", \"test\")" $file ||
    err "$file test task needs t.libs. âŸ Please add this to the test task: t.libs.push(\"lib\", \"test\")"

grep -q "t.pattern = " $file ||
    err "$file test task needs t.pattern. âŸ Please add this to the test task: t.pattern = \"test/**/*.rb\""

grep -q "task :default => \[:test\]" $file ||
    err "$file needs default test. âŸ Please add: âŸ task :default => [:test]"
