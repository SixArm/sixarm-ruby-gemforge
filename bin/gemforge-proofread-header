#!/bin/bash
set -o errexit

##
# Do simple checking of our gem's header text
# to ensure that everything is in a good format.
#
# The header is the leading lines of the file lib/*.rb 
#
# The header should be:
#   # -*- coding: utf-8 -*-
#   =begin rdoc
#   
#   = SixArm.com » Ruby » ...
#   
#   Author:: ...
#   Copyright:: ...
#   License:: ...
#  
#   Summary ...
#   
#   Description ...
#
##

file="$1"
pcregrep -q -M -e "^# -\*- coding: utf-8 -\*-\n=begin rdoc\n\n= SixArm.com » Ruby » .*\n\nAuthor::.*\nCopyright::.*\nLicense::.*\n\n\w+.*\n\n\w+.*\n\n" "$file" && echo "gemforge-proofread-header $file success" || echo "gemforge-proofread-header $file failure"
