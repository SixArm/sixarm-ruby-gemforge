#!/bin/bash
set -euf
DIR=$(dirname $0)
. $DIR/gemforge

file=".gitignore"

# Must have
for s in \
  "/.bundle" \
  "/.yardoc" \
  "/Gemfile.lock" \
  "/vendor/" \
  "/coverage/" \
  "/coverage.data"
do
  file_text_must_match "$file" "^$s$"
done

# Must not have
for s in \
  "doc" \
  ".DS_Store" \
  "/.coveralls.yml"
do
  file_text_must_not_match "$file" "^$s$"
done

exit 0
