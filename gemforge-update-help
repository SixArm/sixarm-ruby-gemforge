
# Flush existing docs
for f in .yardoc doc coverage; do
  git rm -fr $f || true
  rm -fr doc || true
done

# Create new yard doc files
mkdir doc
yardoc lib/{*.rb,**/*.rb}
chmod +r -R doc/

# Create new coverage
rake

# Commit
git add .yardoc
git add coverage
git add doc
git commit "Update help" .yardoc coverage doc
